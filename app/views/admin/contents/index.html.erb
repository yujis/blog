<h1>Articles</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Tags</th>
      <th>Author</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= article.tag_list %></td>
        <td><%= article.author %></td>
        <td><%= article.created_at %></td>
        <td>
          <%= link_to 'Edit', {:action => 'edit', :id => article.id}, :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', {:action => 'destroy', :id => article.id}, :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', {:action => 'new'}, :class => 'btn btn-primary' %>
