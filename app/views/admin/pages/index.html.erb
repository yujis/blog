<h1>Pages</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= link_to page.title, page_path(page) %></td>
        <td><%= page.author %></td>
        <td><%= page.created_at %></td>
        <td>
          <%= link_to 'Edit', {:action => 'edit', :id => page.id}, :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', {:action => 'destroy', :id => page.id}, :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', {:action => 'new'}, :class => 'btn btn-primary' %>
